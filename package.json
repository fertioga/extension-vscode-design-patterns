{
  "name": "design-patterns",
  "displayName": "DesignPatterns",
  "description": "Build easily the principal design patterns with just one click!",
  "icon": "img/icon.jpeg",
  "version": "0.0.6",
  "publisher": "fertioga",
  "engines": {
    "vscode": "^1.74.0"
  },
  "author": {
    "name": "Fernando Augusto Fran√ßa",
    "email": "fertioga@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/fertioga/extension-vscode-design-patterns",
  "repository": {
    "type": "git",
    "url": "https://github.com/fertioga/extension-vscode-design-patterns"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "design patterns",
    "PHP",
    "patterns",
    "principal patterns"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {  
      "menus": {
        "view/title": [
            {
                "command": "designpatterns.refreshEntry",
                "when": "view == treePatterns",
                "group": "navigation"
            }
        ]
      },    
      "views": {
        "package-explorer": [
          {
            "id": "treePatterns",
            "name": "List",
            "icon": "media/dep.svg",
            "contextualTitle": "DesignPatterns"
          }
        ]
      },
      "viewsContainers": {
        "activitybar": [
          {
            "id": "package-explorer",
            "title": "DesignPatterns",
            "icon": "media/dep.svg"
          }
        ]
      },
    "commands": [
      {
        "command": "designpatterns.refreshEntry",
        "title": "Refresh",
        "icon": {
            "light": "resources/light/refresh.svg",
            "dark": "resources/dark/refresh.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@vscode/test-electron": "^2.2.0"
  }
}
